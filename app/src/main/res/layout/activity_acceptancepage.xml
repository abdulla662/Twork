<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".acceptancepage">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="46dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="192dp"
            android:layout_height="41dp"
            android:layout_marginStart="184dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/twork" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="204dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Full Name"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Age"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nametext" />

        <TextView
            android:id="@+id/name45"
            android:layout_width="389dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="What are the courses you have taken that are useful for this job ?"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listtext" />

        <TextView
            android:id="@+id/name44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="List your recent experiences "
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/abouttext" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Tell Us About Yourself"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agetext" />

        <TextView
            android:id="@+id/nametext"
            android:layout_width="292dp"
            android:layout_height="52dp"
            android:background="@drawable/plaintextfigure"
            android:gravity="center"
            android:textColorHint="#524B6B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/agetext"
            android:layout_width="292dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/plaintextfigure"
            android:gravity="center"
            android:textColorHint="#524B6B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name2" />

        <TextView
            android:id="@+id/abouttext"
            android:layout_width="292dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/plaintextfigure"
            android:gravity="center"
            android:textColorHint="#524B6B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name3" />

        <TextView
            android:id="@+id/listtext"
            android:layout_width="292dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/plaintextfigure"
            android:gravity="center"
            android:textColorHint="#524B6B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name44" />

        <TextView
            android:id="@+id/coursestext"
            android:layout_width="292dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/plaintextfigure"
            android:gravity="center"
            android:textColorHint="#524B6B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name45" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Employee Form"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <Button
            android:id="@+id/reject"
            android:layout_width="148dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#E02F2F"
            android:fontFamily="@font/dm_sans_bold"
            android:onClick="reject"
            android:text="Reject"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coursestext" />

        <Button
            android:id="@+id/accept"
            android:layout_width="148dp"
            android:layout_height="52dp"
            android:backgroundTint="#33A10C"
            android:fontFamily="@font/dm_sans_bold"
            android:onClick="accept"
            android:text="Accept"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coursestext" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
